@model Model.ROOMDEVICEVALUE
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(window).load(function () {
        $("#STATUS").select2("val", $("#STATUS_").val());
        $("#DEVICEREF").select2("val", $("#DEVICEREF_").val());
        $("#ROOMREF").select2("val", $("#ROOMREF_").val());
    });
</script>

<div class="row">
    <div class="col-md-12">
        <div class="tabbable tabbable-custom tabbable-noborder tabbable-reversed">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#tab_0" data-toggle="tab">
                        Oda Cihaz Güncelleme
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab_0">
                    <div class="portlet box green">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-gift"></i> Oda Cihaz Güncelleme
                            </div>
                            <div class="tools">
                                <a href="javascript:;" class="collapse">
                                </a>
                                <a href="javascript:;" class="reload">
                                </a>
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <!-- BEGIN FORM-->
                            <form action="@Request.RawUrl" method="POST" class="form-horizontal">
                                <div class="form-body">
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Oda</label>
                                        <div class="col-md-4">
                                            @Html.HiddenFor(model => model.LREF)
                                            @Html.HiddenFor(model => model.DEVICEREF, new { @id = "DEVICEREF_", Name = "DEVICEREF_" })
                                            @Html.HiddenFor(model => model.ROOMREF, new { @id = "ROOMREF_", Name = "ROOMREF_" })
                                            @Html.HiddenFor(model => model.UPDATETIME)
                                            @Html.HiddenFor(model => model.STATUS, new { @id = "STATUS_", Name = "STATUS_" })
                                            @Html.DropDownList("ROOMREF", ViewBag.RoomList as SelectList, new {@class = "select2me form-control"})
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Cihaz</label>
                                        <div class="col-md-4">
                                            @Html.DropDownList("DEVICEREF", ViewBag.DeviceList as SelectList, new { @class = "select2me form-control" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Değeri</label>
                                        <div class="col-md-4">
                                            @Html.TextBoxFor(model => model.VALUE, new { @class = "form-control input-circle", @placeholder = "Cihazın başlangıç değeri" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Durumu</label>
                                        <div class="col-md-4">
                                            @Html.DropDownList("STATUS", ViewBag.Status as SelectList, new { @class = "select2me form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="submit" class="btn btn-circle blue">Kaydet</button>
                                            <button type="button" class="btn btn-circle default">İptal</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <!-- END FORM-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>