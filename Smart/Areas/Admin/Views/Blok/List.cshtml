@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="tabbable tabbable-custom tabbable-noborder tabbable-reversed">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#tab_0" data-toggle="tab">
                        Tüm Bloklar
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab_0">
                    <div class="portlet box yellow">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-user"></i>Tüm Bloklar
                            </div>
                        </div>
                        <div class="portlet-body">
                            <table class="table table-striped table-bordered table-hover" id="sample_2">
                                <thead>
                                    <tr>
                                        <th>
                                            Blok Adı
                                        </th>
                                        <th>
                                            Topic
                                        </th>
                                        <th>
                                            Durumu
                                        </th>
                                        <th>
                                            #
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in ViewBag.List)
                                {
                                    <tr class="odd gradeX">
                                        <td>
                                            @item.NAME
                                        </td>
                                        <td>
                                            @item.TOPIC
                                        </td>
                                        <td>
                                            <span class="label label-sm label-@(item.STATUS == 0 ? "warning" : "success")">
                                                @(item.STATUS == 0 ? "Deactive" : "Active")
                                            </span>
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", "Blok", new { id = item.LREF }, null)/ @Html.ActionLink("Delete", "Delete", "Blok", new { id = item.LREF }, new { @onclick = "return confirm('Do you confirm the deletion?');" })
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>